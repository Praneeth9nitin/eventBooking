generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  bookings  Booking[]
}

model Event {
  id       Int       @id @default(autoincrement())
  title    String
  location String
  dateTime DateTime
  bookings Booking[]
  seats    Seat[]
}

model Seat {
  id          Int          @id @default(autoincrement())
  eventId     Int
  seatNo      String
  isBooked    Boolean      @default(false)
  bookingSeat BookingSeat?
  holdBy      Int?
  holdUntil   DateTime?
  status      SeatStatus  @default(AVAILABLE)
  event       Event        @relation(fields: [eventId], references: [id])
}

model Booking {
  id        Int           @id @default(autoincrement())
  userId    Int
  eventId   Int
  status    BookingStatus @default(PENDING)
  createdAt DateTime      @default(now())
  event     Event         @relation(fields: [eventId], references: [id])
  user      User          @relation(fields: [userId], references: [id])
  seats     BookingSeat[]
}

model BookingSeat {
  bookingId Int
  seatId    Int     @unique
  booking   Booking @relation(fields: [bookingId], references: [id])
  seat      Seat    @relation(fields: [seatId], references: [id])

  @@id([bookingId, seatId])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  FAILED
}

enum SeatStatus {
  AVAILABLE
  HOLD
  BOOKED
}
